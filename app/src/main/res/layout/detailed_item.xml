<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="4dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="CartID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_cart" android:layout_weight="1"
                android:layout_margin="4dp"/>
        <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_city" android:layout_weight="3"
                android:layout_margin="4dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="ZIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_zip" android:layout_weight="1"
                android:layout_margin="4dp"/>
        <TextView
                android:text="Street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_street" android:layout_weight="3"
                android:layout_margin="4dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Translit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_translit" android:layout_weight="1"
                android:layout_margin="4dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_id" android:visibility="gone"/>
</LinearLayout>